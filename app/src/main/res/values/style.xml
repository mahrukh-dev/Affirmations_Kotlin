<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_recycler_view">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">@dimen/_485sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="item_title_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="item_image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_150sdp</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>